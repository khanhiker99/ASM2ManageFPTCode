<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My FPT Schools</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link rel="stylesheet" href="~/Content/login.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>


<body>
	<div class="header">
		<div class="container">
			<div class="header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("FPT School", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>


			<form id="coursesearch" action="https://cms.greenwich.edu.vn/course/search.php" method="get" style="float: right" class="form-inline" role="form">
				<div class="form-group">
					<label for="coursesearchbox" class="sr-only">Search Courses</label>
					<input type="text" id="coursesearchbox" size="30" name="search" class="form-control" style="width: 50%" value="" placeholder="Search Courses">
					<button type="submit" class="mt-1 btn btn-primary" style="width: 20%">Go</button>
				</div>
			</form>

		</div>
	</div>

	
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - FPT Schools</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
